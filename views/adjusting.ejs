<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Adjusting Losses</title>
  <%- include("./partials/head.ejs") %>
</head>

<body>
  <%- include("./partials/header.ejs") %>
  <%- include('./partials/back') %>
  

  <a href="/newloss/new"><button>Create New Loss</button></a>
  
  <div>
    <h2>List of Losses</h2>
    <% for (let loss of los) { %>
      <ul>
        <li>
          <a href="/newloss/<%= loss._id %>">
            <strong>Insured Name:</strong> <%= loss.insuredName %> <br>
            <strong>Date of Loss:</strong> <%= loss.dateOfLoss %> <br>
            <strong>Type of Loss:</strong> <%= loss.typeOfLoss %> <br>
            <strong>Location:</strong> <%= loss.lossLocation %>
          </a>
        </li>
      </ul>
  <% } %>
  </div>

</body>

</html>
